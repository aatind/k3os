ssh_authorized_keys:
- github:aatind
hostname: k3os-public-master1
boot_cmd:
- mkdir -p /var/lib/nfs/sm
- rc-update add rpc.statd
- rc-update add nfs
write_files:
- encoding: ""
  content: |-
    #!/bin/bash

    mkdir -p '/var/lib/rancher/k3s/server/manifests/'

    #Kube-vip configuration
    export K3S_VIP_IP=192.168.31.90
    export INTERFACE=eth0
    curl -sL https://kube-vip.io/manifests/rbac.yaml > /var/lib/rancher/k3s/server/manifests/kube-vip-rbac.yaml
    curl -sL kube-vip.io/k3s | vipAddress=${K3S_VIP_IP} vipInterface=${INTERFACE} sh | sudo tee /var/lib/rancher/k3s/server/manifests/vip.yaml
   
    #NFS provisioner - Spinning-rust
    export NFS_SERVER=192.168.32.32
    export NFS_PATH=/mnt/Z2/Kubernetes-state/k3s-public
    export RECLAIM_POLICY=Retain
    export PROVISIONER_NAME=nfs-hd
    export STORAGE_CLASS_NAME=nfs-hd
    curl -sL https://raw.githubusercontent.com/aatind/k3os/main/manifests/NFS | nfsServer=${NFS_SERVER} nfsPath=${NFS_PATH} reclaimPolicy=${RECLAIM_POLICY} provisionerName=${PROVISIONER_NAME} storageClassName=${STORAGE_CLASS_NAME} sh | sudo tee /var/lib/rancher/k3s/server/manifests/NFS1.yaml
    kubectl apply -f /var/lib/rancher/k3s/server/manifests/NFS1.yaml

    #NFS provisioner - SSD
    export NFS_SERVER=192.168.32.32
    export NFS_PATH=/mnt/Flash-Z1/Kubernetes-state/k3s-public
    export RECLAIM_POLICY=Retain
    export PROVISIONER_NAME=nfs-ssd
    export STORAGE_CLASS_NAME=nfs-ssd
    curl -sL https://raw.githubusercontent.com/aatind/k3os/main/manifests/NFS | nfsServer=${NFS_SERVER} nfsPath=${NFS_PATH} reclaimPolicy=${RECLAIM_POLICY} provisionerName=${PROVISIONER_NAME} storageClassName=${STORAGE_CLASS_NAME} sh | sudo tee /var/lib/rancher/k3s/server/manifests/NFS2.yaml    kubectl apply -f /var/lib/rancher/k3s/server/manifests/NFS1.yaml
    kubectl apply -f /var/lib/rancher/k3s/server/manifests/NFS2.yaml

    #Set NFS provisioner - SSD as default storage class
    kubectl patch storageclass $STORAGE_CLASS_NAME -p '{"metadata": {"annotations":{"storageclass.kubernetes.io/is-default-class":"true"}}}'

  owner: root
  path: /etc/initial-setup.sh
  permissions: '0755'
run_cmd:
- "sh /etc/initial-setup.sh"

k3os:
  
  k3sArgs:
    - server
    - --cluster-init
    - --tls-san=k3s-public.systechit.local
    - --tls-san=192.168.31.90
    - --flannel-backend=vxlan
    - --disable=local-storage,traefik
